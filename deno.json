{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["deno.window", "dom", "es2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "@/": "./src/",
    "@utils/": "./src/utils/",
    "@components/": "./src/components/",
    "react": "npm:react@^18.2.0",
    "react-dom": "npm:react-dom@^18.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "firebase-app": "npm:firebase@^10.0.0",
    "firebase-auth": "npm:firebase-auth@^10.0.0"
  },
  "scopes": {
    "@app/": {
      "react": "npm:preact@^10.0.0"
    }
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch src/main.ts",
    "start": "deno run -P=default src/main.ts",
    "build": "deno compile --output dist/ifixmytech src/main.ts",
    "test": "deno test -P=test-permissions",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "deploy": "deno run --allow-net --allow-run scripts/deploy.ts",
    "api": "deno run --allow-net api/server.ts"
  },
  "permissions": {
    "default": {
      "read": ["./data", "./src"],
      "write": ["./logs"],
      "net": ["api.fixmytech.pages.dev", "firebase.io"],
      "env": true,
      "run": ["git"]
    },
    "test-permissions": {
      "read": ["./test-data"],
      "write": ["./test-outputs"],
      "net": ["localhost"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "semiColons": true,
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx", "src/**/*.jsx"],
    "exclude": ["dist/", "node_modules/", "test-data/"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    },
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  },
  "test": {
    "include": ["test/**/*.test.ts"],
    "exclude": ["test/e2e/"],
    "permissions": {
      "read": ["./test-data"],
      "net": ["localhost"]
    }
  },
  "lock": {
    "path": "./deno.lock",
    "frozen": true
  },
  "nodeModulesDir": "auto",
  "vendor": true,
  "unstable": ["kv", "cron"],
  "exclude": ["dist/", "node_modules/", "test-data/", "logs/"]
}
